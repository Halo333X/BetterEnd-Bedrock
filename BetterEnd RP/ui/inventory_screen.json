{
  "item_input_slot": {
    "type": "panel",
    "size": [
      18,
      18
    ],
    "$slot_name|default": "", // to avoid some glitch behavior
    "$overlay_texture|default": "",
    "controls": [
      {
        "image": {
          "type": "image",
          "size": [
            16,
            16
          ],
          "layer": 4,
          "texture": "$overlay_texture"
        }
      },
      {
        "slot_collection": {
          "type": "stack_panel",
          "orientation": "none",
          "layer": 1,
          "collection_name": "crafting_input_items",
          "size": [
            "100%c",
            "100%c"
          ],
          "controls": [
            {
              "$slot_name@crafting.crafting_input_grid_item": {
                "collection_index": "$slot_index"
              }
            }
          ]
        }
      }
    ]
  },
  // our custom ui for fletching table
  "fletching_table_ui": {
    "type": "panel",
    "controls": [
      {
        "crafting_label@crafting.crafting_label": {
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [
            0,
            5
          ]
        }
      },
      {
        "fletching_content": {
          "type": "panel",
          "offset": [
            0,
            "37.5% + 18.75%"
          ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "fletching_inputs": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": [
                  "100%c",
                  "100%c"
                ],
                "controls": [
                  {
                    "$slot_name@crafting.item_input_slot": {
                      "$slot_index": 0,
                      "$slot_name": "top_left",
                      "$overlay_texture": "textures/ui/flint_overlay"
                    }
                  },
                  {
                    "$slot_name@crafting.item_input_slot": {
                      "$slot_index": 3,
                      "$slot_name": "left_middle",
                      "$overlay_texture": "textures/ui/stick_overlay"
                    }
                  },
                  {
                    "$slot_name@crafting.item_input_slot": {
                      "$slot_index": 6,
                      "$slot_name": "bottom_left",
                      "$overlay_texture": "textures/ui/feather_overlay"
                    }
                  },
                  {
                    "_@common.empty_panel": {
                      "size": [
                        6,
                        0
                      ]
                    }
                  },
                  {
                    "crafting_arrow_large@crafting.crafting_arrow_large": {}
                  },
                  {
                    "_@common.empty_panel": {
                      "size": [
                        10,
                        0
                      ]
                    }
                  },
                  {
                    "output": {
                      "type": "panel",
                      "size": [
                        26,
                        26
                      ],
                      "controls": [
                        {
                          "output_grid_3x3@crafting.output_grid_3x3": {
                            "offset": [
                              0,
                              "-17.5%"
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#crafting_label_text",
        "binding_name_override": "#text"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not ((#text - $fletching_table) = #text))", // show this only if it has §f§t in it. (global variable -> $fletching_table)
        "target_property_name": "#visible"
      }
    ]
  },
  // add custom ui to main panel
  "crafting_panel_top_half": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "fletching_table_ui@crafting.fletching_table_ui": {}
          }
        ]
      }
    ]
  },
  // Hide normal ui if we are inside our fletching table
  "work_bench_panel_3x3": {
    "bindings": [
      {
        "binding_name": "#crafting_label_text",
        "binding_name_override": "#text"
      },
      {
        "binding_type": "view",
        "source_property_name": "((#text - $fletching_table) = #text)", // if table_name has §f§t, then we don't want to show normal 3x3 crafting ui
        "target_property_name": "#visible"
      }
    ]
  }
}