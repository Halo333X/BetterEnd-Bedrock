{
	"format_version": "1.19.0",
	"minecraft:entity": {
		"description": {
			"identifier": "betterend:chest_entity",
			"is_summonable": true,
			"is_spawnable": false,
			"is_experimental": false
		},
		"component_groups": {
			"betterend:no_container": {
				"minecraft:entity_sensor": {
					"sensor_range": 7,
					"event_filters": {
						"all_of": [
							{
								"test": "is_family",
								"subject": "other",
								"value": "player"
							},
							{
								"test": "has_container_open",
								"subject": "other",
								"value": false
							}
						]
					},
					"event": "betterend:no_container"
				}
			},
			"betterend:container": {
				"minecraft:entity_sensor": {
					"sensor_range": 7,
					"event_filters": {
						"all_of": [
							{
								"test": "is_family",
								"subject": "other",
								"value": "player"
							},
							{
								"test": "has_container_open",
								"subject": "other",
								"value": true
							}
						]
					},
					"event": "betterend:container"
				}
			}
		},
		"components": {
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": true
			},
			"minecraft:knockback_resistance": {
				"value": 1
			},
			"minecraft:collision_box": {
				"height": 0.9,
				"width": 1
			},
			"minecraft:health": {
				"value": 1
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {},
						"deals_damage": false
					}
				]
			},
			"minecraft:inventory": {
				"additional_slots_per_strength": 0,
				"container_type": "container",
				"inventory_size": 27
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"betterend:container"
					]
				}
			},
			"betterend:container": {
				"run_command": {
					"command": [
						"tag @s[tag=!container_open] add container_open"
					]
				},
				"remove": {
					"component_groups": [
						"betterend:container"
					]
				},
				"add": {
					"component_groups": [
						"betterend:no_container"
					]
				}
			},
			"betterend:no_container": {
				"run_command": {
					"command": [
						"tag @s[tag=container_open] remove container_open"
					]
				},
				"remove": {
					"component_groups": [
						"betterend:no_container"
					]
				},
				"add": {
					"component_groups": [
						"betterend:container"
					]
				}
			}
		}
	}
}